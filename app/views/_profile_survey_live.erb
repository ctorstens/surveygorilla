<div class="survey">
  <table class="table table-striped table-bordered table-hover box-shadow">
    <tr>Live Surveys</tr>
    <tr>
      <td>#</td>
      <td class="span7">Survey Title</td>
      <td>Created at</td>
      <td>Modified</td>
      <td>link</td>
    </tr>
    <% @live_surveys.each_with_index do |survey, index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><a href="/analytics/<%= survey.token %>"><%= survey.title %></a></td>
      <td><%= format_date(survey.created_at) %></td>
      <td><%= time_ago_in_words(survey.updated_at) %></td>
      <td><a href="/view/<%= survey.token %>"><%= survey.token %></a></td>
    </tr>
    <% end %>
  </table>
</div>
