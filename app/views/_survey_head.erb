<div id="survey-head">
  <input id="survey-title" name="survey[title]" required="required" type="text" placeholder="Untitled form" />
  <input id="survey-description" name="survey[description]" required="required" type="text" placeholder="Form Description"/>
  <input id="survey-token" name="survey[token]" type="hidden" value="<%= @survey.token %>">
  <input id="survey-submit" type="submit" value="Create Form" />
</div>