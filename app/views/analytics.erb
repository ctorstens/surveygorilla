<div class="container">
  <div class="analytics">
    <% @mcq.each do |mcq| %>
    <table class="table table-striped table-bordered table-hover box-shadow">
      <tr> <%= mcq.position %>. <%= mcq.title %> </tr>
      <tr>
        <td class="span6"></td>
        <td class="span4"></td>
        <td class="span1">Response Percent</td>
        <td class="span1">Response Count</td>
      </tr>
      <% total_responses = mcq.responses.count %>
      <% mcq.options.each do |option|  %>
      <tr>
        <td><%= option.choice %></td>
        <% response_percent = (option.responses.count/total_responses.to_f)*100 %>
        <td>
          <div class="progress">
            <div class="bar" style="width: <%= response_percent %>%;"></div>
          </div>
        </td>
        <td><%= response_percent %>%</td>
        <td><%= option.responses.count %></td>
      </tr>
      <% end %>
      <tr>
        <td colspan="3" style="text-align:right">Total Responses</td>
        <td><%= total_responses %></td>
      </tr>
    </table></br></br>
    <% end %>
  </div>
</div>
