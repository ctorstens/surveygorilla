<div class="survey container">
  <form action="/survey/create" method="post">
    <div class="form-horizontal">
      <%= erb :_survey_head, :layout => false %>
      <div class="widget-container"></div>
      <div class="control-group"><div class="controls"><button class="btn" id="add_question" type="button">Add a question</button></div></div>
      <div class="controls"><input class="btn" id="survey-submit" type="submit" value="Create Survey"></div>
    </div>
  </form>
</div>


<div id="survey-inventory">
  <%= erb :_survey_question_mcq, :layout => false %>  
  <%= erb :_survey_question_mcq_q, :layout => false %>
  <%= erb :_survey_question_mcq_choices, :layout => false %>
  <%= erb :_survey_question_tq_choices, :layout => false %> 
</div>
