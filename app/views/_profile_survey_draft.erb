<div class="survey">
  <table class="table table-striped table-bordered table-hover box-shadow">
    <form method="put" action="/launch">
    <tr>Draft Surveys</tr>
    <tr>
      <td>#</td>
      <td class="span6">Survey Title</td>
      <td>Created at</td>
      <td>Modified</td>
      <td>Go!</td>
    </tr>
    <% @draft_surveys.each_with_index do |survey, index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><a href="/edit/<%= survey.token %>"><%= survey.title %></a></td>
      <td><%= format_date(survey.created_at) %></td>
      <td><%= time_ago_in_words(survey.updated_at) %></td>
      <td><button class="btn" type="submit" name="token" value="<%= survey.token %>">Launch</button></td>
    </tr>
    <% end %>
    </form>
  </table>
</div>
